#! /usr/bin/env python
# encoding: utf-8
# Thomas Nagy, 2005, 2006 (ita)

VERSION='0.0.1'
APPNAME='qt4_test'

# these variables are mandatory,
srcdir = '.'
blddir = '_build_'

def set_options(opt):
	opt.tool_options('Qt4')

def configure(conf):
	conf.checkTool(['g++', 'Qt4'])

def build(bld):
	bld.add_subdirs('src')

