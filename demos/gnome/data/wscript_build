# process .in files with intl_tool

obj=bld.new_task_gen('intltool_in')
obj.source  = 'gnome-test.schemas.in'
obj.destvar = 'PREFIX'
obj.subdir  = 'etc/gconf/schemas'
obj.podir   = '../po'
obj.flags   = '-s'

obj=bld.new_task_gen('intltool_in')
obj.source  = 'gnome-test.desktop.in'
obj.destvar = 'PREFIX'
obj.subdir  = 'usr/share/gnome/autostart'
obj.podir   = '../po'
obj.flags   = '-d'
