#! /usr/bin/env python
# encoding: utf-8
# Thomas Nagy, 2008 (ita)

VERSION='0.0.1'
APPNAME='simple_tool'
srcdir = '.'
blddir = 'build'

import TaskGen
TaskGen.declare_chain(
	name = 'a',
	action = '${COPY} ${SRC} ${TGT}',
	ext_in = '.input',
	ext_out = '.a',
)

TaskGen.declare_chain(
	name = 'b',
	action = '${COPY} ${SRC} ${TGT}',
	ext_in = '.a',
	ext_out = '.b',
)

TaskGen.declare_chain(
	name = 'c',
	action = '${COPY} ${SRC} ${TGT}',
	ext_in = '.b',
	ext_out = '.c',
	reentrant = 0 # <<- this means the files produced are not reinjected as sources
)

def set_options(opt):
	pass

def configure(conf):
	import os
	conf.env['COPY'] = os.getcwd() + os.sep + "cp.py"

def build(bld):
	bld.new_task_gen(source="uh.input")

	#foo = TaskGen.task_gen()
	#foo.source = "uh.coin"

