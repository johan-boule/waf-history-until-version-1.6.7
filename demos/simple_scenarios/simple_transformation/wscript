VERSION='0.0.1'
APPNAME='simple_tool'
srcdir = '.'
blddir = 'build'

import Object
Object.declare_chain(
	name = 'dang',
	action = '${COPY} ${SRC} ${TGT}',
	ext_in = '.coin',
	ext_out = '.cpp',
	reentrant = 0
)

def set_options(opt):
	pass

def configure(conf):
	import os
	conf.env['COPY'] = os.getcwd() + os.sep + "cp.py"

def build(bld):
	Object.task_gen(source="uh.coin")

	#foo = Object.task_gen()
	#foo.source = "uh.coin"

