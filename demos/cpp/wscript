#! /usr/bin/env python
# encoding: utf-8
# Thomas Nagy, 2006 (ita)

import Configure

VERSION='0.0.1'
APPNAME='cpp_test'

distclean=['_build_', 'cache']

def setup_build(bld):
	bld.set_dirs('.', '_build_')
	bld.set_default_env('main.cache.py')

def build(bld):
	# process subfolders from here
	bld.add_subdir('src')
	bld.add_subdir('src2')

def set_options(opt):
	opt.add_option('--prefix', type='string', help='installation prefix', dest='prefix')
	opt.add_option('--destdir', type='string', help='destination for install (when creation rpms or debs)', dest='destdir')

def configure():
	conf = Configure.Configure()
	conf.checkTool(['g++'])
	conf.store('main.cache.py')

	#sub_config('src')

